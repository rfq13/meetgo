# =============================================================================
# WebRTC Meeting Application Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your environment
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=webrtc_meeting
POSTGRES_USER=webrtc_user
POSTGRES_PASSWORD=webrtc_password_change_in_production
POSTGRES_PORT=5432
DATABASE_SSL_MODE=disable

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_password_change_in_production
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Backend API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080
GIN_MODE=release

# =============================================================================
# WebSocket Server Configuration
# =============================================================================
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8081

# =============================================================================
# JWT Configuration
# =============================================================================
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# =============================================================================
# Janus WebRTC Server Configuration
# =============================================================================
JANUS_API_SECRET=janusrocks_change_in_production
JANUS_ADMIN_SECRET=janusrocksadmin_change_in_production
JANUS_HTTP_PORT=8088
JANUS_HTTPS_PORT=7889
JANUS_WS_PORT=8189
JANUS_WSS_PORT=8989
JANUS_INTERFACE=0.0.0.0
JANUS_LOG_LEVEL=3
JANUS_LOG_COLORS=true

# =============================================================================
# STUN/TURN Server Configuration
# =============================================================================
# STUN Server (Google's public STUN server)
STUN_SERVER=stun:stun.l.google.com:19302

# TURN Server (Optional - required for NAT traversal)
# TURN_SERVER=turn:your-turn-server.com:3478
# TURN_USER=your-turn-username
# TURN_PASSWORD=your-turn-password

# RTP Port Range for WebRTC media
RTP_PORT_RANGE=10000-20000

# =============================================================================
# Logging Configuration
# =============================================================================
LOGGER_LEVEL=info
LOGGER_FORMAT=json

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-User-ID

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_URL=ws://localhost:8081
VITE_JANUS_URL=http://localhost:8088/janus
VITE_APP_NAME=WebRTC Meeting
VITE_APP_VERSION=1.0.0

# Frontend STUN/TURN Configuration
VITE_STUN_SERVERS=stun:stun.l.google.com:19302
# VITE_TURN_SERVERS=turn:your-turn-server.com:3478
# VITE_TURN_USERNAME=your-turn-username
# VITE_TURN_CREDENTIAL=your-turn-password

# =============================================================================
# Nginx Configuration (Production)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=WebRTC Meeting

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=./uploads

# =============================================================================
# Security Configuration
# =============================================================================
# Session configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=3600

# Password hashing
BCRYPT_COST=12

# API Key for external services (if needed)
API_KEY_EXTERNAL=your-external-api-key

# =============================================================================
# Monitoring Configuration (Optional)
# =============================================================================
# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# Development Configuration
# =============================================================================
# Enable debug mode in development
DEBUG=false

# Enable hot reload in development
HOT_RELOAD=true

# Development database (optional)
DEV_DATABASE_URL=postgresql://webrtc_user:webrtc_password_change_in_production@localhost:5432/webrtc_meeting_dev?sslmode=disable

# =============================================================================
# Production Configuration
# =============================================================================
# Production environment flag
NODE_ENV=production

# SSL/TLS configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# =============================================================================
# Third-party Services (Optional)
# =============================================================================
# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid for email notifications
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_ROOM_RECORDING=true
FEATURE_SCREEN_SHARING=true
FEATURE_CHAT=true
FEATURE_FILE_SHARING=true
FEATURE_WHITEBOARD=true
FEATURE_BREAKOUT_ROOMS=true
FEATURE_POLLING=true
FEATURE_REACTIONS=true

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database
TEST_DATABASE_URL=postgresql://webrtc_user:webrtc_password_change_in_production@localhost:5432/webrtc_meeting_test?sslmode=disable

# Test Redis
TEST_REDIS_URL=redis://localhost:6379/1

# Enable test mode
TEST_MODE=false

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker build arguments
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Docker registry (if using private registry)
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# =============================================================================
# Kubernetes Configuration (Optional)
# =============================================================================
KUBERNETES_NAMESPACE=webrtc-meeting
KUBERNETES_CONFIG_PATH=~/.kube/config

# =============================================================================
# CI/CD Configuration (Optional)
# =============================================================================
CI=false
CD=false
BUILD_NUMBER=0
GIT_BRANCH=main
GIT_COMMIT_SHA=

# =============================================================================
# Additional Configuration
# =============================================================================
# Custom configuration values
CUSTOM_CONFIG_VALUE=custom_value

# Application metadata
APP_NAME=WebRTC Meeting
APP_VERSION=1.0.0
APP_DESCRIPTION=A WebRTC-based video conferencing application
APP_AUTHOR=Your Name
APP_EMAIL=your.email@example.com
APP_URL=https://your-domain.com

# Legal information
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms
SUPPORT_EMAIL=support@your-domain.com